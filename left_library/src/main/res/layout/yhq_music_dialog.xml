<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_gravity="top"
        android:background="@color/grey_300">

        <LinearLayout
            android:id="@+id/dialog_linearlayout1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dialog_status"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/musicdialog_status"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="随机播放" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_linearlayout2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginRight="20dp"
            android:layout_toStartOf="@+id/dialog_linearlayout3"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/musicdialog_collection"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="收藏" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_linearlayout3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/musicdialog_clear"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="清空" />
        </LinearLayout>
    </RelativeLayout>

    <ListView
        android:id="@+id/musicdialog_list"
        android:layout_width="match_parent"
        android:layout_height="300dp"></ListView>
</LinearLayout>