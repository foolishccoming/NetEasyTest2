<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/id___linerlayout"
    android:background="@drawable/touch_bg"
    android:layout_height="wrap_content"
    android:paddingTop="10dp">

    <LinearLayout
        android:layout_marginTop="5dp"
        android:id="@+id/linerlayout"
        android:layout_width="match_parent"
        android:background="@drawable/touch_bg"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/id_recycler_Allmusic_recyclerItem_iview1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_music_first" />

        <TextView
            android:id="@+id/id_recycler_Allmusic_recyclerItem_tview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="本地音乐"
            android:textColor="@color/black_1"
            android:textSize="17sp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_gravity="center_vertical"
            android:id="@+id/id_recycler_Allmusic_recyclerItem_tview2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(130)"
            android:layout_marginLeft="10dp" />
    </LinearLayout>

    <View
        android:layout_below="@id/linerlayout"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="0dp"
        android:background="#85caccce"/>

</RelativeLayout>

