<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/id_imageView_album_picroot"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_margin="3dp"
        android:background="@drawable/icon_root" />

    <ImageView
        android:id="@+id/id_imageView_album_pic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="3dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/id_imageView_album_picroot"
        android:orientation="vertical">

        <TextView
            android:id="@+id/id_textView_album_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="200dp"
            android:singleLine="true"
            android:textColor="#444444"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/id_textView_album_scount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/id_textView_album_singer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="#666666"
                android:textSize="13dp" />
        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/id_imageButton_more"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:background="@drawable/icon_more" />
</RelativeLayout>